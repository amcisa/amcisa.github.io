.line
  width 100%
  -moz-border-radius 50px
  -webkit-border-radius 50px
  border-radius 50px
  border 2px solid #000000

@media (min-device-width: 992px)
  #recent-events
    width 80%
    margin auto

  #recent-events
    .active
      width 66.6666%
      height 350px
      img
        height 350px
    img
      width 100%
      height 175px
      box-shadow 6px 6px 10px #888888
    .col-md-4
      padding 1%

  .active
    .image-text
      padding 8%
      text-align left
      height 100%
      width 97%
      position absolute
      p
        visibility visible

  .image-text
    padding 5%
    text-align left
    height 90%
    width 94%
    position absolute
    background-color rgba(0,0,0,0.8)
    opacity 0
    color rgb(255,255,255)
    transition opacity .55s ease-in-out
    -moz-transition opacity .55s ease-in-out
    -webkit-transition opacity .55s ease-in-out
    p
      visibility hidden
    &:hover
      opacity 1
      transition opacity .55s ease-in-out
      -moz-transition opacity .55s ease-in-out
      -webkit-transition opacity .55s ease-in-out

