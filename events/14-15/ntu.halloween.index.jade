extends ./ntu.halloween.layout.jade

block title
  title Halloween

block content
  .panel.panel-danger.section
    .panel-heading
      h1 大家一起来halloween吧!  
    .panel-body 
      .question
        h1
          span.fa.fa-fw.fa-clock-o.red &nbsp;
          | 活动日期 : 26th October
        h1 
          span.fa.fa-fw.fa-calendar.yellow &nbsp;
          | 活动时间 : 8.00 p.m. - 10 p.m.
        h1 
          span.fa.fa-fw.fa-bullhorn.green &nbsp;
          | 截至日期 : 17th October
        h1 
          span.fa.fa-fw.fa-building.blue &nbsp;
          | 活动地点 : 
          span.fa.fa-magic 
          | 咳咳咳

//Custom Carousel 
block carousel
  #myCarousel.carousel.slide.carousel-fade.section
    //Round page indicators
    ol.carousel-indicators
      li(data-target="#myCarousel",data-slide-to="0",class="active")
      li(data-target="#myCarousel",data-slide-to="1")
      //li(data-target="#myCarousel",data-slide-to="2")
    //Wrapper for inner slides
    .carousel-inner
      .item.active
        img(src="../img/14-15/ntu.halloween/live (13).jpg")
        h1 我们等你
      .item
        img(src="../img/14-15/ntu.halloween/poster.png")
        h1 NTU Halloween
    //Buttons to slide right or left
    a(class="carousel-control left" href="#myCarousel" data-slide="prev") 
      span(class="glyphicon glyphicon-chevron-left")
    a(class="carousel-control right" href="#myCarousel" data-slide="next")
      span(class="glyphicon glyphicon-chevron-right")