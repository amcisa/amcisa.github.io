form.form-horizontal
  fieldset
    legend.align-center Personal Information
    //omitted secondary school
    +text-form("中文姓名")(class="Name_CH")
    +text-form("English Name")(class="Name_EN")
    +text-form("Personal Email")(class="Email_Personal")
    +text-form("School Email")(class="Email_School")
    +select-form("Hall")(class="Hall")
      option outside
      - var n = 1
      while n < 19
        option= n++
    +text-form("Block")(class="halldata Block hide")
    +text-form("Level")(class="halldata Level hide")
    +text-form("Room")(class="halldata Room hide")
    +textArea-form("Address Outside")(class="Address_Outside")
    +text-form("Phone (MY)")(class="Phone_MY")
    +text-form("Phone (SG)*")(class="Phone_SG")
    +select-form("Gender", ["M","F"])(class="Gender")
    +select-form("Entry Year", ["1","2"])(class="Entry_Year")
    +select-form("Course")(class="Course")
      option ACC (Accounting)
      option ADM (Arts, Design and Media)
      option AERO (Aerospace Engineering)
      option BIE (Bioengineering)
      option BS (Biological sciences)
      option BUS (Business)
      option CBC (Chemical and Biological Chemistry)
      option CBE (Chemical and Biomolecular Engineering)
      option CEE (Civil Engineering)
      option CHIN (Chinese)
      option CSC (Computer Science)
      option ECONS (Economics)
      option EEE (Electrical & Electronic Engineering)
      option ENE (Environmental Engineering)
      option ENG (Common Engineering)
      option IEM (Information Engineering & Media)
      option LMS (Lee Kong Chien Medical School)
      option MAE (Mechanical Engineering)
      option MAEC (Mathematics and Economics)
      option MAFI (Mathematics and Finance)
      option MARI (Maritime Studies)
      option MAS (Mathematical Sciences)
      option MSE (Material Sciences)
      option NIE (National Institute of Education)
      option PAP (Physics and Applied Physics)
      option PPGA (Public Policy and Global Affairs)
      option PSY (Psychology)
      option WKW (Wee Kim Wee School Of Communication Studies)
    +password-form("Current Password")(class="oldPassword")
    +password-form("New Password")(class="Password")
    .form-group
      .col-lg-10.col-lg-offset-2
        button.btn.btn-primary(type='submit').submit
          span Update!
          i.fa.fa-fw.fa-circle-o-notch.fa-spin.hide