extends ./layout.jade

block title
  title AmTee Submission Portal

block head
  link(href="./css/animate.min.css", rel="stylesheet")
  link(href="./css/profile.css", rel="stylesheet")

block content  
  login_iframe()
  
  .wrapper
    section.container
      .col-lg-2
        ul.nav.nav-pills.nav-stacked
            li.active.profile
              a(href='#profile', data-toggle='tab', aria-expanded='true') 上传作品
            li.registered
              a(href='#registered', data-toggle='tab', aria-expanded='true', onclick = 'showImages()') 我的作品集


      .col-lg-10
        .tab-content
            .tab-pane.fade.active.in.align-left#profile
              //fill in data obtained from the session.
              include ../includes/amtee_profile.jade
            .tab-pane.fade.in.align-left#registered
              //h2 你还未上传任何作品。期待您的杰作！
              #img_row
            +modal


block script
  script(src="js/amtee.js")

