mixin event_tab(eventlink,imgsrc, title, type,type_color, description)
  a(href=eventlink).white.underline.row
    .col-md-3
    .col-md-2.top-margin
      // for using icons instead of images
      if block
        block
      else
        img(src=imgsrc)
    .col-md-4.align-left
      .row.zero-margin
        .col-md-10
            h2=title
        .col-md-2
          h4(class=type_color)=type
      .row
        p=description
    .col-md-3
  .col-md-12
    .col-md-3
    .col-md-6.border-bottom-light
    .col-md-3 

extends ./layout.jade

block title
  title Home

block content
  .wrapper
    //poster
    .poster#poster-label
      .ps-img
        img(src="./img/14-15/poster.photo.jpg")
        .ps-cover
    .ps-well
      .col-md-3
      .col-md-6
        h1 留新大马独中生联谊会
        h3 Association of Malaysian Chinese Independent School Alumni
        .btn.btn-dark.services-btn 
          h3 #常用服务
        .btn.btn-dark.events-btn 
          h3 #最新动态
        include:markdown ../includes/amcisa_profile.md
      .col-md-3

    //All services
    .container.grey-bg.full-pg#services-label
      .row
        .col-md-3
        .col-md-6.border-bottom-light
          h1#service 常用服务
        .col-md-3
      .row.bottom-margin
        .col-md-3
        a(href="student.html").col-md-3.red.txt-shadow
          span.fa.fa-compass.ico-large
          h2 升学资讯
        a(href="update.html").col-md-3.yellow.txt-shadow
          span.fa.fa-pencil-square-o.ico-large
          h2 NTU会员更新资料
        .col-md-3
    
    //All events
    .container.grey-bg.full-pg#events-label
      .row
        .col-md-3
        .col-md-6.border-bottom-light
          h1#event 最新动态
        .col-md-3

      +event_tab("events/14-15/ntu.msd.index.html",
              "./img/14-15/ntu.msd/logo.png","#NTU Malaysian Sports Day",
              "活动更新","red", 
              "MSD is an annual event where Malaysian students currently\
               studying in Singapore can get together and take part in a day of Sports and Games!")

      +event_tab("events/14-15/nus.cohesion.index.html",
                "./img/14-15/nus.cohesion/logo.png","#NUS MSL-AMCISA Cohesion 2015",
                "活动更新","red", 
                "2GATHER 2.0 is baacck!!! XD. It is a great chance for all the Malaysians \
                in NUS to bond with each other.This time we will be having station games, water games,\
                 BBQ session and many more!")

      +event_tab("events/14-15/ntu.ammo.index.html",
                "./img/14-15/ntu.ammo/logo.png","#NTU AMCISA Member Outing",
                "活动更新","red", 
                "(AMMO)是一个以凝聚、团结AMCISA会员为目标的活动。 \
                在各自忙碌的大学生涯里，想找个喘息的空间？想和好朋友出走，却没有时间筹办？好机会来了！！ \
                歡迎参加ammo！")

      //Link to all events
      .col-md-12
        a(href="events.html")
          h2 活动全集
      br
  
block script
  script(type='text/javascript').
    $(document).ready(function(){
      pageScrollTo("events");
      pageScrollTo("services");
      pageScrollTo("poster");
      return false;
    })
