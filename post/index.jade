mixin event_tab(eventlink,imgsrc, title, type,type_color, description)
  a(href=eventlink).white.underline.row
    .col-md-3
    .col-md-2.top-margin
      // for using icons instead of images
      if block
        block
      else
        img(src=imgsrc)
    .col-md-4.align-left
      .row.zero-margin
        .col-md-10
            h2=title
        .col-md-2
          h4(class=type_color)=type
      .row
        p=description
    .col-md-3
  .row
    .col-md-3
    .col-md-6.border-bottom-light
    .col-md-3 

extends ./layout.jade

block title
  title Home

block content
  .wrapper
    //poster
    .poster#poster-label
      .ps-img
        img(src="./img/14-15/poster.photo.jpg")
        .ps-cover
    .ps-well
      .col-md-3
      .col-md-6
        h1 留新大马独中生联谊会
        h3 Association of Malaysian Chinese Independent School Alumni
        .btn.btn-dark.services-btn 
          h3 #常用服务
        .btn.btn-dark.events-btn 
          h3 #最新动态
        include:markdown ../includes/amcisa_profile.md
      .col-md-3

    //All services
    .container.grey-bg.full-pg#services-label
      .row
        .col-md-3
        .col-md-6.border-bottom-light
          h1#service 常用服务
        .col-md-3
      .row.bottom-margin
        .col-md-3
        a(href="student.html").col-md-3.red.txt-shadow
          span.fa.fa-compass.ico-large
          h2 升学资讯
        a(href="update.html").col-md-3.yellow.txt-shadow
          span.fa.fa-pencil-square-o.ico-large
          h2 NTU会员更新资料
        .col-md-3
    
    //All events
    .container.grey-bg.full-pg#events-label
      .row
        .col-md-3
        .col-md-6.border-bottom-light
          h1#event 最新动态
        .col-md-3

      +event_tab("events/ntu.halloween.feedback.html",
                "","#NTU Amhallo & Exam Welfare之提供意见",
                "活动更新","red",
                "请大家提供对Halloween 跟 Exam Welfare Refreshments的意见以让我们把下一届的活动办得更好。" )
        span.fa.fa-envelope.yellow.ico-large

      +event_tab("events/ntu.ewr.index.html",
              "./img/14-15/ntu.ewr/logo.png","#NTU Exam Welfare Refreshment",
              "活动更新","red", 
              "Final要到了，现在的你是不是非常紧绷呢？ 新鲜出炉的AMCISA Exam Welfare Refreshment邀你来歇息充电，\
              和朋友聊天，吃些精致的小点心，尽情地放松。")

      +event_tab("update.html",
                "","#NTU 会员资料更新",
                "会员须知","green",
                "NTU 的同学们来帮忙更新自己的资料吧！" )
        span.fa.fa-pencil-square-o.blue.ico-large

      

      //Link to all events
      .row
        a(href="events.html")
          h2 活动全集
      br
  
block script
  script(type='text/javascript').
    $(document).ready(function(){
      pageScrollTo("events");
      pageScrollTo("services");
      pageScrollTo("poster");
      return false;
    })
