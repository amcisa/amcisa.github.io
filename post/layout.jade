//-
  Base layout for the page. 
  blocks can be added for additional and conditional content

mixin navlink(name,link)
  li&attributes(attributes)
    a(href=link)= name

mixin modal()
  .modal.animated.align-left
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h3.error 
            i.fa.fa-fw.fa-exclamation-triangle.red 
            span Error!
          h3.success 
            i.fa.fa-fw.fa-smile-o.green 
            span Success!
        .modal-body
          p.body-content.error Error
          p.body-content.success Success
          
doctype html5
html
  head 
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible",content="chrome=1")
    meta(name="viewport",content="width=device-width,initial-scale=1")
    //meta(http-equiv="refresh" content="90")
    
    link(href="http://maxcdn.bootstrapcdn.com/bootswatch/3.2.0/cosmo/bootstrap.min.css", rel="stylesheet")
    link(href="./css/app.css", rel="stylesheet")
    link(href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", rel="stylesheet")
    
    block head

  block title
  body
    //Default navigation bar
    .navbar-default.navbar-fixed-top
      .navbar-header
        button(type="button",class="navbar-toggle",data-toggle="collapse",data-target=".navbar-responsive-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a(href="index.html").navbar-brand.mobile-only
          h3.zero-margin 主页

      .navbar-collapse.collapse.navbar-responsive-collapse
        .nav.navbar-nav.navbar-left
          a(href="index.html")
            img(src="./img/amc.header.logo.full.png")
        ul.nav.navbar-nav.navbar-right
          +navlink("本会主页","index.html")(class="poster-btn")
          +navlink("升学咨询","student.html")(class="services-btn")
          +navlink("活动全集","events.html")
          +navlink("联络我们","contact.html")
          +navlink("登入戶口","login.html")(class="user-login")

    //This is where our main content is inserted into.

    block content
      .alert.alert-dismissible.alert-danger.col-lg-12.align-left.alert-tab.hide
        strong
  
      iframe#login_frame(width = '600px', height = '600px', src = "login.html").hide Loading...
    
    include ../includes/footer.jade

    //Utility scripts
    script(src="js/jquery-1.11.0.js")
    script(src="js/bootstrap.min.js")
    script(src="js/googlepage.js")
    script(src="js/session.js")
    script(src="js/util.js")
    block script

