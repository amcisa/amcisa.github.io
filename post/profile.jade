extends ./layout.jade

mixin text-form(name)
  .form-group&attributes(attributes)
    label.col-lg-2.control-label=name
    .col-lg-10
      input.form-control(type='text', placeholder=name)

mixin textArea-form(name)
  .form-group&attributes(attributes)
    label.col-lg-2.control-label=name
    .col-lg-10
      textarea.form-control(rows='3')
    block

mixin select-form(name,options,range)
  .form-group&attributes(attributes)
    label.col-lg-2.control-label=name
    .col-lg-10
      select.form-control
        if block
          block
        if options
          each o in options
            option=o

mixin password-form(name)
  .form-group&attributes(attributes)
    label.col-lg-2.control-label=name
    .col-lg-10
      input.form-control(type='password', placeholder="Only type this if you want to change your password")



block title
  title Login

block head
  link(href="./css/animate.min.css", rel="stylesheet")
  link(href="./css/profile.css", rel="stylesheet")

block content  
  .wrapper
    section.container
      .col-lg-2
        ul.nav.nav-pills.nav-stacked
            li.active
              a(href='#profile', data-toggle='tab', aria-expanded='true') Profile
            li
              a(href='#registered', data-toggle='tab', aria-expanded='true') Registered events
      .col-lg-10
        .tab-content
            .tab-pane.fade.active.in.align-left#profile
              //fill in data obtained from the session.
              include ../includes/profile_profiletab.jade
            .tab-pane.fade.in.align-left#registered
              h2 This place have not been contructed.
            +modal

block script
  script(src="js/profile.js")